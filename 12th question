#include <stdio.h>

int main() {
    int weights[5]; // Array to store the weights of the treasures
    int totalWeight = 0; // Variable to store the total weight

    // Prompt the user to input the weights of the five treasures
    printf("Enter the weights of the five treasures:\n");
    for (int i = 0; i < 5; i++) {
        printf("Weight of treasure %d: ", i + 1);
        scanf("%d", &weights[i]); // Read the weight of each treasure
        totalWeight += weights[i]; // Add the weight to the total
    }

    // Display the total weight collected
    printf("Total weight of treasures collected: %d\n", totalWeight);

    return 0;
}
